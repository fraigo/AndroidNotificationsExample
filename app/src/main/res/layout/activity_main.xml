<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default notification"
            android:textAlignment="center" />

        <Button
            android:id="@+id/notifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/stat_notify_chat"
            android:text="SHOW DEFAULT" />

        <Button
            android:id="@+id/notifyButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/stat_notify_chat"
            android:text="CONFIG DEFAULT" />

        <TextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urgent Notification"
            android:textAlignment="center" />

        <Button
            android:id="@+id/notifyButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/stat_notify_chat"
            android:text="SHOW URGENT" />

        <Button
            android:id="@+id/notifyButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/stat_notify_chat"
            android:text="CONFIG URGENT" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>